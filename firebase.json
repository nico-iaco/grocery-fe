{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "src/**",
      "public/**",
      "README.md",
      "package.json",
      "package-lock.json",
      "k8s/**"
    ],
    "rewrites": [
      {
        "source": "/api/item/**",
        "run": {
          "serviceId": "grocery-be"
        }
      },
      {
        "source": "/api/pantry/**",
        "run": {
          "serviceId": "grocery-be"
        }
      },
      {
        "source": "/api/meal/**",
        "run": {
          "serviceId": "food-track-be"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "!/api/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=36000, s-maxage=36000"
          }
        ]
      }
    ]
  }
}
